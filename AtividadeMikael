package atividademikael;

import java.util.Scanner;

public class AtividadeMikael {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String[] cafes = new String[]{"Café expresso R$: 0,75", "Café capuccino R$ 1,00", "Café c/ leite R$ 1,25"};
        int i=0;
        for(i=0; i < cafes.length; i++){
            System.out.println(cafes[i]);
        }
        
        System.out.println("Informe quant. vendas expresso: ");
        int quantexpress = scanner.nextInt();
        System.out.println("Informe o valor do expresso: ");
        Double valorexpress = scanner.nextDouble();
        Double totalexpress = quantexpress * valorexpress;
        
        System.out.print("\n");
        
        System.out.println("Informe quant. vendas capuccino: ");
        int quantcapuccino = scanner.nextInt();
        System.out.println("Informe o valor do capuccino: ");
        Double valorcapuccino = scanner.nextDouble();
        Double totalcapuccino = quantcapuccino * valorcapuccino;
        
        System.out.print("\n");
        
        System.out.println("Informe quant. vendas café c/ leite: ");
        int quantcafeleite = scanner.nextInt();
        System.out.println("Informe o valor do café c/ leite: ");
        Double valorcafeleite = scanner.nextDouble();
        Double totalcafeleite = quantcafeleite * valorcafeleite;
        
        System.out.print("\n");
        
        System.out.println("Total vendas express: ");
        System.out.println("Quantidade vendas expresso: " + quantexpress + "\n" + " valor: " + valorexpress + " reais");
        System.out.println("Valor total expresso: " + totalexpress);
        
        System.out.print("\n");
        
        System.out.println("Total vendas capuccino: ");
        System.out.println("Quantidade vendas expresso: " + quantcapuccino + "\n" + " valor: " + valorcapuccino + " reais");
        System.out.println("Valor total capuccino: " + totalcapuccino);
        
        System.out.print("\n");
        
        System.out.println("Total vendas café c/ leite: ");
        System.out.println("Quantidade vendas expresso: " + quantcafeleite + "\n" + " valor: " + valorcafeleite + " reais");
        System.out.println("Valor total café c/ leite: " + totalcafeleite);

    }
}
