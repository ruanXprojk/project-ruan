    private void botaoInserirActionPerformed(java.awt.event.ActionEvent evt) {                                             
        try {
            Connection conexao = null;
            PreparedStatement statment = null;
            
            String url = "jdbc:mysql://localhost:3308/campos";
            String usuario = "root";
            String senha = "";
            
            String sql = "insert into DescricaoProduto(nomeProduto, CNPJ, fornecedor, valor, materiaPrima)values('?', '?', '?', '?', '?')";
            PreparedStatement statement = conexao.prepareStatement(sql);
            statment.setString(1, texto_nomeProduto.getText());
            statment.setString(2, texto_CNPJ.getText());
            statment.setString(3, texto_fornecedor.getText());
            statment.setString(4, texto_valor.getText());
            statment.setString(5, texto_materiaPrima.getText());
            
            int linhasAfetadas = statement.executeUpdate();
            if(linhasAfetadas > 0){
                System.out.println("Dados inseridos com sucesso!");
            }else{
                System.err.println("Nenhum dado inserido!");
            }
            
        } catch (SQLException ex) {
            Logger.getLogger(Projeto.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                            

    private void botaoUpdateActionPerformed(java.awt.event.ActionEvent evt) {                                            
        Connection conexao = null;
        PreparedStatement statement = null;
        
        String url = "jdbc:mysql://localhost:3308/campos";
        String usuario = "root";
        String senha = "";
        
        String sql = "update DescricaoProduto set nomeProduto = ?, fornecedor = ?, valor = ?, materiaPrima = ? where CNPJ = ?";
        PreparedStatement statement = conexao.PreparedStatement(sql);
        
    }                                           

